        <%= link_to 'Request a Platform', new_admin_service_path, class: "usa-button" %>
        <br/>
        <br/>
        <div class="row placeholders">
          <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">

            <table id="data-tables" class="table table-striped">
          		<thead>
                <tr class = "service_row">
                  <th>Platform Name</th>
                  <th>Platform URL Example</th>
                  <th>Archived</th>
                  <th class = "lastlinks">Actions</th>
